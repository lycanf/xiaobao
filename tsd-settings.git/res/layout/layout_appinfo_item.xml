<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_version"
            android:textColor="@drawable/white"
            android:textSize="@dimen/text_size_25" />

        <TextView
            android:id="@+id/txt_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/txt_fm_sum"
            android:textSize="@dimen/text_size_25" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_about_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/white"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        android:text="@string/txt_update_content"
        android:textColor="@drawable/white"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:id="@+id/txt_about_upadte_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/gray"
        android:textSize="@dimen/text_size_20" />

</LinearLayout>