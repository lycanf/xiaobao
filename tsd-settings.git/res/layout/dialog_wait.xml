<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_280"
    android:layout_height="wrap_content"
    android:background="@drawable/bu_dialog_wait"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dimen_10"
        android:text="@string/txt_dialog_wait"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60"
        android:src="@drawable/dialog_fgx" />

    <ImageView
        android:id="@+id/img_dialog_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_off_selecter" />

</LinearLayout>