<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black80"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/txt_fm_ts"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_25" />

        <TextView
            android:id="@+id/btn_fm_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_30"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="@string/txt_fm_toast_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_22" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@drawable/bg_fm_frequency"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/img_layout_fm_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_fm_ctrl_selector"
                android:src="@drawable/bg_fm_cut" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_layout_fm_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/txt_fm_frequency"
                    android:textColor="@drawable/txt_fm_sum"
                    android:textSize="@dimen/text_size_35" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:text="@string/txt_fm_unit"
                    android:textColor="@drawable/txt_fm_sum"
                    android:textSize="@dimen/text_size_30" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/img_layout_fm_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_fm_ctrl_selector"
                android:src="@drawable/bg_fm_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_layout_music_paly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_fm_play_1" />

            <TextView
                android:id="@+id/txt_fm_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="@string/txt_fm_play_music"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>