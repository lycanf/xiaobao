<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recording_bg" >

    <ImageButton
        android:id="@+id/record_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/close_btn_bg" />

    <Button
        android:id="@+id/record_home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_btn_bg"
        android:text="@string/go_home"
        android:textSize="20sp"
        android:textColor="@color/textColor1"
         />

    <com.tuyou.tsd.voice.widget.MicrophoneView
        android:id="@+id/record_mic_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>