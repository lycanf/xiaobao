<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_line_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_route_navigation_selecter"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_item_route_num"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_30" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20" >

        <TextView
            android:id="@+id/txt_item_route_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_item_route_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dimen_10"
                android:text="TextView"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_18" />

            <TextView
                android:id="@+id/txt_item_route_addree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>