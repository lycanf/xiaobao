<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_route_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/txt_route_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20" />

        <ImageButton
            android:id="@+id/btn_route_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/close_btn_bg" />

        <ImageView
            android:id="@+id/separator_ImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_route_title"
            android:layout_margin="10dp"
            android:src="@drawable/separator_hline" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/list_route_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/img_route_list_fgx" >
        </ListView>
    </LinearLayout>

</LinearLayout>